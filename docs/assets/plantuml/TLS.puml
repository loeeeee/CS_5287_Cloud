@startuml
skinparam rectangleBackgroundColor #F7F1FF
rectangle "Client" as C
rectangle "Edge LB (TLS Termination)\nCert: *.example.com" as ELB
rectangle "Backend Pool" as Pool {
  node "Service A" as SA
  node "Service B" as SB
}

